generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id              String    @id @default(cuid())
  owner           String
  title           String
  description     String
  status          String
  tasks           String[]  @default([])

  targetDate      String?
  priority        String?
  priorityRank    Int?
  assignedTo      String?
  createdAt       DateTime  @default(now()) @map("created_at")

  @@map("projects")
}
